<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<!-- Mapper 파일에서 사용하는 타입에 대한 단축 이름을 지정하는 설정 -->
	<typeAliases>
		<typeAlias type="com.groupware.dto.Board" alias="Board" />

		<typeAlias type="com.groupware.dto.Dept" alias="Dept" />
		<typeAlias type="com.groupware.dto.Position" alias="Position" />

		<typeAlias type="com.groupware.dto.BoardComment" alias="BoardComment" />
		<typeAlias type="com.groupware.dto.Attendance" alias="Attendance" />
		<typeAlias type="com.groupware.dto.Employee" alias="Employee" />
		
		<typeAlias type="com.groupware.dto.Schedule" alias="Schedule" />

		<typeAlias type="com.groupware.dto.AddressBook" alias="AddressBook" />

		<typeAlias type="com.groupware.dto.ApprovalForm" alias="ApprovalForm" />
		<typeAlias type="com.groupware.dto.Menu" alias="Menu" />
		<typeAlias type="com.groupware.dto.Log" alias="Log" />

	</typeAliases>
	<mappers>
		<mapper resource="com/groupware/mapper/BoardMapper.xml" />

		<mapper resource="com/groupware/mapper/EmployeeMapper.xml" />

		<mapper resource="com/groupware/mapper/AttendanceMapper.xml" />
	
		<mapper resource="com/groupware/mapper/ScheduleMapper.xml" />
		<mapper resource="com/groupware/mapper/ApprovalMapper.xml" />

		<mapper resource="com/groupware/mapper/AddressBookMapper.xml" />
	</mappers>

</configuration>
